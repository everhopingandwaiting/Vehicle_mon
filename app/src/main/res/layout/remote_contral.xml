    <RelativeLayout

        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/StandbyElectricity_info_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备用电池电量信息："
            />


        <TextView
            android:id="@+id/StandbyElectricity_info_value_rc"
            android:layout_toRightOf="@id/StandbyElectricity_info_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0v"
            android:textColor="@android:color/holo_green_light"
            />
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/StandbyElectricity_info_rc"
            android:id="@+id/Electricity_info_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电量信息："
            />


        <TextView
            android:layout_toRightOf="@id/Electricity_info_rc"
            android:id="@+id/Electricity_info_value_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0V"
            android:textColor="@android:color/holo_red_light"
            />

        <TextView
            android:layout_below="@+id/Electricity_info_rc"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开关状态'红色'标识为当前状态，无法点击！\n'绿色'标识代表可设置状态，可点击!"
            android:background="@android:color/holo_red_light"
            android:textSize="16dp"
            android:autoText="true"
            android:gravity="center_horizontal"

            />
    </RelativeLayout>
